# PingOne Configuration
# Replace these values with your actual PingOne environment details

# Your PingOne environment issuer URL (replace your-environment-id with actual ID)
PINGONE_ISSUER=https://auth.pingone.sg/your-environment-id/as

# Authorization URL (usually same as issuer + /authorize)
PINGONE_AUTH_URL=https://auth.pingone.sg/your-environment-id/as/authorize

# OIDC Application Client ID (from PingOne Admin Console)
PINGONE_CLIENT_ID=your-client-id

# OIDC Application Client Secret (from PingOne Admin Console)
PINGONE_CLIENT_SECRET=your-client-secret

# Redirect URI (must match what's configured in PingOne)
PINGONE_REDIRECT_URI=http://localhost:3000

# Backend Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_DEBUG=True

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# SSL Configuration
SSL_VERIFY=True
SSL_CERT_PATH=